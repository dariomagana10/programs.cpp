#include <iostream>
using namespace std;
 int fibonacci (int n)
{
  if (n==1) {
  return 1;
  }
  else if (n<=0){
    return 0;
  }
  else
  {
    return fibonacci(n-1)+fibonacci(n-2);
  }
}
int main ()
{
  int n;
  string des;
  do{
  cout <<"Type the position of the fibonaccis value you want to know"<<endl;
  cin >>n;
  cout <<"The fibonacci number of the:"<<" "<<n<<" "<<"position is :"<<" "<<fibonacci (n)<<endl;
  cout <<"You wanna try it again? yes or no"<<endl;
  cin >>des;
}while(des=="yes");
cout<<"Thanks for using my program"<<endl;
  return 0;

}
